<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.forum.mappers.UserIntegralRecordMapper">
	<!--实体映射-->
	<resultMap id="base_result_map" type="com.forum.entity.po.UserIntegralRecord">
		<!--记录ID-->
		<id column="record_id" property="recordId"/>
		<!--用户ID-->
		<result column="user_id" property="userId"/>
		<!--操作类型-->
		<result column="oper_type" property="operType"/>
		<!--积分-->
		<result column="integral" property="integral"/>
		<!--创建时间-->
		<result column="create_time" property="createTime"/>
	</resultMap>

	<!--通用查询结果列-->
	<sql id="base_column_list">
		record_id,user_id,oper_type,integral,create_time
	</sql>

	<!--基础查询条件-->
	<sql id="base_query_condition">
		<if test="query.recordId != null">
			and id = #{query.recordId}
		</if>
		<if test="query.userId != null and query.userId != null">
			and id = #{query.userId}
		</if>
		<if test="query.operType != null">
			and id = #{query.operType}
		</if>
		<if test="query.integral != null">
			and id = #{query.integral}
		</if>
		<if test="query.createTime != null">
			and id = #{query.createTime}
		</if>
	</sql>

	<!--拓展查询条件-->
	<sql id="base_query_condition_extend">
		<if test="query.userIdFuzzy != null and query.userIdFuzzy">
			and user_id like concat('%', #{query.userIdFuzzy}, '%')
		</if>
		<if test="query.createTimeStart != null and query.createTimeStart">
			<![CDATA[ and create_time >= str_to_date(#{query.createTimeStart}, '%Y-%m-%d') ]]>
		</if>
		<if test="query.createTimeEnd != null and query.createTimeEnd">
			<![CDATA[ and create_time < date_sub(str_to_date(#{query.createTimeEnd}, '%Y-%m-%d'),interval -1 day) ]]>
		</if>
	</sql>

	<!--通用查询条件-->
	<sql id="query_condition">
		<where>
			<include refid="base_query_condition"/>
			<include refid="base_query_condition_extend"/>
		</where>
	</sql>

	<!--查询列表-->
	<select id="selectList" resultMap="base_result_map">
		SELECT
		<include refid="base_column_list"/>
			FROM user_integral_record
		<include refid="query_condition"/>
		<if test="query.orderBy!=null">
			ORDER BY #{query.orderBy}
		</if>
		<if test="query.simplePage!=null">
			LIMIT #{query.simplePage.start}, #{query.simplePage.end}
		</if>
	</select>

	<!--查询数量-->
	<select id="selectCount" resultType="java.lang.Integer">
		SELECT COUNT(1) FROM user_integral_record
		<include refid="query_condition"/>
	</select>

	<!--插入（匹配有值的字段）-->
	<insert id="insert" parameterType="com.forum.entity.po.UserIntegralRecord">
		<selectKey keyProperty="bean.record_id" resultType="Integer" order="AFTER">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO user_integral_record
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bean.recordId != null">
				record_id,
			</if>
			<if test="bean.userId != null">
				user_id,
			</if>
			<if test="bean.operType != null">
				oper_type,
			</if>
			<if test="bean.integral != null">
				integral,
			</if>
			<if test="bean.createTime != null">
				create_time,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="bean.recordId != null">
				#{bean.recordId},
			</if>
			<if test="bean.userId != null">
				#{bean.userId},
			</if>
			<if test="bean.operType != null">
				#{bean.operType},
			</if>
			<if test="bean.integral != null">
				#{bean.integral},
			</if>
			<if test="bean.createTime != null">
				#{bean.createTime},
			</if>
		</trim>
	</insert>

	<!--插入或者更新（匹配有值的字段）-->
	<insert id="insertOrUpdate" parameterType="com.forum.entity.po.UserIntegralRecord">
		INSERT INTO user_integral_record
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bean.recordId != null">
				record_id,
			</if>
			<if test="bean.userId != null">
				user_id,
			</if>
			<if test="bean.operType != null">
				oper_type,
			</if>
			<if test="bean.integral != null">
				integral,
			</if>
			<if test="bean.createTime != null">
				create_time,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="bean.recordId != null">
				#{bean.recordId},
			</if>
			<if test="bean.userId != null">
				#{bean.userId},
			</if>
			<if test="bean.operType != null">
				#{bean.operType},
			</if>
			<if test="bean.integral != null">
				#{bean.integral},
			</if>
			<if test="bean.createTime != null">
				#{bean.createTime},
			</if>
		</trim>
		 on DUPLICATE key update
		<trim prefix="" suffix="" suffixOverrides=",">
			<if test="bean.userId != null">
				user_id = VALUES(user_id),
			</if>
			<if test="bean.operType != null">
				oper_type = VALUES(oper_type),
			</if>
			<if test="bean.integral != null">
				integral = VALUES(integral),
			</if>
			<if test="bean.createTime != null">
				create_time = VALUES(create_time),
			</if>
		</trim>
	</insert>

	<!--批量插入-->
	<insert id="insertBatch" parameterType="com.forum.entity.po.UserIntegralRecord">
		INSERT INTO
		user_integral_record(user_id,oper_type,integral,create_time)values
		<foreach collection="list" item="item" separator=",">
			(#{item.userId},#{item.operType},#{item.integral},#{item.createTime})
		</foreach>
	</insert>

	<!--批量插入或更新-->
	<insert id="insertOrUpdateBatch" parameterType="com.forum.entity.po.UserIntegralRecord">
		INSERT INTO
		user_integral_record(user_id,oper_type,integral,create_time)values
		<foreach collection="list" item="item" separator=",">
			(#{item.userId},#{item.operType},#{item.integral},#{item.createTime})
		</foreach>
		on DUPLICATE key update
		record_id = VALUES(record_id),
		user_id = VALUES(user_id),
		oper_type = VALUES(oper_type),
		integral = VALUES(integral),
		create_time = VALUES(create_time)
	</insert>


	<!--根据RecordId查询-->
	<select id="selectByRecordId" resultMap="base_result_map">
		select
		<include refid="base_column_list"/>
		from user_integral_record
		where record_id = #{recordId}
	</select>

	<!--根据RecordId更新-->
	<update id="updateByRecordId" parameterType="com.forum.entity.po.UserIntegralRecord">
		update user_integral_record
		<set>
			<if test="bean.recordId != null">
				record_id = #{bean.recordId},
			</if>
			<if test="bean.userId != null">
				user_id = #{bean.userId},
			</if>
			<if test="bean.operType != null">
				oper_type = #{bean.operType},
			</if>
			<if test="bean.integral != null">
				integral = #{bean.integral},
			</if>
			<if test="bean.createTime != null">
				create_time = #{bean.createTime},
			</if>
		</set>
		where record_id = #{recordId}
	</update>

	<!--根据RecordId删除-->
	<delete id="deleteByRecordId">
		delete
		from user_integral_record
		where record_id = #{recordId}
	</delete>

</mapper>
